<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.epic.debug"
   name="Debug Plug-in"
   version="0.3.1"
   provider-name="EPIC Project"
   class="org.epic.debug.PerlDebugPlugin">

   <runtime>
      <library name="debug.jar">
         <export name="*"/>
      </library>
      <library name="gnu-regexp-1.1.4.jar"/>
      <library name="antlr.jar"/>
      <library name="perlvarparser.jar"/>
      <library name="brazil_mini.jar"/>
   </runtime>
 <requires>
      <import plugin="org.eclipse.core.runtime.compatibility"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.workbench"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.epic.perleditor"/>
      <import plugin="org.epic.ext.cbg.editor"/>
      <import plugin="org.eclipse.help"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.help.base"/>
      <import plugin="org.epic.regexp"/>
   </requires>


   <extension
         id="org.epic.debug"
         name="Epic Perl Debugger"
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            name="Perl Local"
            delegate="org.epic.debug.LaunchConfigurationDelegate"
            modes="run,debug"
            public="true"
            id="org.epic.debug.launchConfigurationPerl">
      </launchConfigurationType>
      <launchConfigurationType
            name="Perl CGI"
            delegate="org.epic.debug.LaunchConfigurationDelegate"
            modes="run,debug"
            public="true"
            id="org.epic.debug.launchConfigurationPerlCGI">
      </launchConfigurationType>
       <launchConfigurationType
            name="Perl Remote"
            delegate="org.epic.debug.LaunchConfigurationDelegate"
            modes="debug"
            public="true"
            id="org.epic.debug.launchConfigurationPerlRemote">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            type="org.epic.debug.launchConfigurationPerl"
            class="org.epic.debug.LaunchConfigurationDialog"
            id="org.epic.debug.launchDialog">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            icon="icons/epic.gif"
            configTypeID="org.epic.debug.launchConfigurationPerl"
            id="org.epic.debug.launchimage">
      </launchConfigurationTypeImage>
   </extension>
<!-- -->
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            type="org.epic.debug.launchConfigurationPerlCGI"
            class="org.epic.debug.LaunchConfigurationDialogCGI"
            id="org.epic.debug.launchDialogCGI">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            icon="icons/epic_cgi.gif"
            configTypeID="org.epic.debug.launchConfigurationPerlCGI"
            id="org.epic.debug.launchimage">
      </launchConfigurationTypeImage>
   </extension>
<!-- -->
<extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            type="org.epic.debug.launchConfigurationPerlRemote"
            class="org.epic.debug.LaunchConfigurationRemoteDialog"
            id="org.epic.debug.launchDialogRemote">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            icon="icons/epic_remote.gif"
            configTypeID="org.epic.debug.launchConfigurationPerlRemote"
            id="org.epic.debug.launchimage">
      </launchConfigurationTypeImage>
   </extension>
<!-- -->






   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            name="Perl Source Locator"
            class="org.epic.debug.SourceLocator"
            id="org.epic.debug.sourceLocator.Local">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="org.epic.debug.DebugModelPresentation"
            id="org.epic.debug.perldebugger.perl">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#PerlRulerContext"
            id="org.epic.debug.RulerPopupActions">
         <action
               label="Breakpoint Properties"
               class="org.epic.debug.ManageRegExpBreakpointRulerPropertyActionDelegate"
               menubarPath="debug"
               id="org.epic.ManageRegExpBreakpointRulerPropertyActionDelegate">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#PerlRulerContext"
            id="org.epic.debug.RulerPopupActions">
         <action
               label="Add RegExp Breakpoint"
               class="org.epic.debug.ManageRegExpBreakpointRulerActionDelegate"
               menubarPath="debug"
               id="org.epic.ManageRegExpBreakpointRulerActionDelegate">
         </action>
      </viewerContribution>
   </extension>
    <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#PerlRulerContext"
            id="org.epic.debug.RulerPopupActions">
         <action
               label="Add Remove Breakpoint"
               class="org.epic.debug.ManageBreakpointRulerActionDelegate"
               menubarPath="debug"
               id="org.epic.ManageBreakpointRulerActionDelegate">
         </action>
      </viewerContribution>
   </extension>
    
   <extension
         id="perlLineBreakpointMarker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.breakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            markerType="org.epic.debug.perlLineBreakpointMarker"
            class="org.epic.debug.PerlLineBreakpoint"
            id="perlLineBreakpoint">
      </breakpoint>
   </extension>
   <extension
         id="perlRegExpBreakpointMarker"
         point="org.eclipse.core.resources.markers">
    <!--  <super
            type="org.eclipse.debug.core.breakpointMarker">
      </super> -->
      <super
            type="org.epic.debug.perlLineBreakpointMarker">
      </super>
      <attribute name = "EPIC_SOURCE_LINE"/>
      <attribute name = "EPIC_REG_EXP"/>
      <attribute name = "EPIC_MATCH_TEXT"/>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            markerType="org.epic.debug.perlRegExpBreakpointMarker"
            class="org.epic.debug.PerlRegExpBreakpoint"
            id="perlRegExpBreakpoint">
      </breakpoint>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Perl Expression View"
            icon="icons/expression_view.gif"
            category="org.epic.views"
            class="org.epic.debug.ExpressionView"
            id="org.eclipse.debug.expressionview">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
<!-- Contributions to Expression View Toolbar -->
      <viewContribution
            targetID="org.eclipse.debug.ui.VariableView"
            id="org.epig.debug.showLocalVariablesAction">
         <action
               label="Show Local Variables"
               icon="icons/epic.gif"
               tooltip="Show Local Variable"
               state="true"
               class="org.epic.debug.ShowLocalVariableActionDelegate"
               menubarPath="additions"
               id="org.epig.debug.showLocalVariablesAction">
         </action>
      </viewContribution>
   </extension>
   
     <extension
         point="org.eclipse.ui.viewActions">
<!-- Contributions to Expression View Toolbar -->
      <viewContribution
            targetID="org.eclipse.debug.ui.VariableView"
            id="org.epig.debug.showGlobalVariablesAction">
         <action
               label="Show Global Variables"
               icon="icons/epic.gif"
               tooltip="Show Global Variable"
               state="true"
               class="org.epic.debug.ShowGlobalVariableActionDelegate"
               menubarPath="additions"
               id="org.epig.debug.showLocalVariablesAction">
         </action>
      </viewContribution>
   </extension>
   
     <extension
         point="org.eclipse.ui.viewActions">
<!-- Contributions to Expression View Toolbar -->
      <viewContribution
            targetID="org.eclipse.debug.ui.VariableView"
            id="org.epig.debug.showPerlInternalVariablesAction">
         <action
               label="Show Perl internal Variables"
               icon="icons/epic.gif"
               tooltip="Show Perl Internal Variables"
               state="false"
               class="org.epic.debug.ShowPerlInternalVariableActionDelegate"
               menubarPath="additions"
               id="org.epig.debug.showLocalVariablesAction">
         </action>
      </viewContribution>
   </extension>
   
   
   
   
   <extension
         point="org.eclipse.debug.ui.consoleColorProviders">
      <consoleColorProvider
            class="org.epic.debug.util.CGIConsoleColorProvider"
            processType="EpicCGIProxy"
            id="org.epic.debug.CGIConsoleColorProvider">
      </consoleColorProvider>
   </extension>

</plugin>
