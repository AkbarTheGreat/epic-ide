				<pathelement path="../../plugins/org.eclipse.core.filebuffers_3.0.0/filebuffers.jar"/>
				<pathelement path="${build.result.folder}/gnu-regexp-1.1.4.jar"/>
			</classpath>
			<src path="src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/regexp.jar.bin" failonerror="true">
			<fileset dir="src/" excludes="**/*.java"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/regexp.jar" basedir="${temp.folder}/regexp.jar.bin"/>
		<delete dir="${temp.folder}/regexp.jar.bin"/>
	</target>

	<target name="regexpsrc.zip" depends="init" unless="regexpsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/regexpsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: org.epic.regexp.">
		<available property="regexp.jar" file="${build.result.folder}/regexp.jar"/>
		<antcall target="regexp.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="regexpsrc.zip" file="${build.result.folder}/regexpsrc.zip"/>
		<antcall target="regexpsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.epic.regexp_0.1.1"/>
		<copy todir="${destination.temp.folder}/org.epic.regexp_0.1.1" failonerror="true">
			<fileset dir="${build.result.folder}" includes="regexp.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.epic.regexp_0.1.1" failonerror="true">
			<fileset dir="${basedir}" includes="plugin.xml,*.jar,regexp.jar,icons/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.epic.regexp_0.1.1"/>
		<copy file="${build.result.folder}/regexpsrc.zip" todir="${destination.temp.folder}/org.epic.regexp_0.1.1" failonerror="false"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.epic.regexp_0.1.1"/>
		<copy file="${temp.folder}/regexp.jar.bin.log" todir="${destination.temp.folder}/org.epic.regexp_0.1.1" failonerror="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.epic.regexp of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/regexp.jar"/>
		<delete file="${build.result.folder}/regexpsrc.zip"/>
		<delete file="${plugin.destination}/org.epic.regexp_0.1.1.jar"/>
		<delete file="${plugin.destination}/org.epic.regexp_0.1.1.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/home/luelljoc/eclipse-test/3.0_M9/eclipse/workspace/org.epic.regexp" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.epic.regexp.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip zipfile="${plugin.destination}/org.epic.regexp_0.1.1.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
